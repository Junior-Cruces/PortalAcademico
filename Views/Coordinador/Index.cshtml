@model List<PortalAcademico.Models.Curso>

@{
    ViewData["Title"] = "Panel Coordinador";
    Layout = "_Layout";
}

<h2>Panel Coordinador</h2>

<a asp-action="Create" class="btn btn-primary mb-3">Crear curso</a>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Nombre</th>
            <th>Código</th>
            <th>Créditos</th>
            <th>Cupo Máximo</th>
            <th>Activo</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var c in Model)
        {
            <tr>
                <td>@c.Nombre</td>
                <td>@c.Codigo</td>
                <td>@c.Creditos</td>
                <td>@c.CupoMaximo</td>
                <td>@(c.Activo ? "Sí" : "No")</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@c.Id" class="btn btn-sm btn-outline-secondary">Editar</a>
                    <a asp-action="Matriculas" asp-route-id="@c.Id" class="btn btn-sm btn-outline-info">Matrículas</a>
                </td>
            </tr>
        }
    </tbody>
</table>
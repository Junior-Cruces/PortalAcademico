@model List<PortalAcademico.Models.Curso>

@{
    ViewData["Title"] = "Catálogo de Cursos";
}

<h2>Catálogo de Cursos</h2>

<form method="get" class="mb-4">
    <div class="row">
        <div class="col-md-4">
            <input type="text" name="nombre" class="form-control" placeholder="Nombre del curso"
                   value="@Context.Request.Query["nombre"]" />
        </div>
        <div class="col-md-2">
            <input type="number" name="creditosMin" class="form-control" placeholder="Créditos mín."
                   value="@Context.Request.Query["creditosMin"]" min="1" />
        </div>
        <div class="col-md-2">
            <input type="number" name="creditosMax" class="form-control" placeholder="Créditos máx."
                   value="@Context.Request.Query["creditosMax"]" min="1" />
        </div>
        <div class="col-md-2">
            <button type="submit" class="btn btn-primary">Filtrar</button>
        </div>
        <div class="col-md-2">
            <a asp-action="Index" class="btn btn-secondary">Limpiar</a>
        </div>
    </div>
</form>

<div class="row">
@foreach (var curso in Model)
{
    <div class="col-md-4 mb-4">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">@curso.Nombre (@curso.Codigo)</h5>
                <p class="card-text">
                    <strong>Créditos:</strong> @curso.Creditos<br />
                    <strong>Cupo:</strong> @curso.CupoMaximo<br />
                    <strong>Horario:</strong> @curso.HorarioInicio - @curso.HorarioFin
                </p>
                <a asp-action="Details" asp-route-id="@curso.Id" class="btn btn-outline-primary">Ver detalle</a>
            </div>
        </div>
    </div>
}
</div>

@if (!Model.Any())
{
    <div class="alert alert-warning">No se encontraron cursos.</div>
}
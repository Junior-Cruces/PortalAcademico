@{
    ViewData["Title"] = "Portal Académico";
    Layout = "_Layout";
}

<div class="container py-5">
    <div class="row align-items-center mb-5">
        <div class="col-lg-6">
            <h1 class="display-5 fw-bold text-primary">Portal Académico</h1>
            <p class="lead text-muted mt-3">
                Gestiona tus cursos, matricúlate en asignaturas y accede a tu historial académico
                desde una plataforma segura y moderna.
            </p>
            <div class="d-flex gap-3 mt-4">
                @if (User.Identity.IsAuthenticated)
                {
                    <a asp-controller="Cursos" asp-action="Index" class="btn btn-primary btn-lg px-4">Ver catálogo</a>
                }
                else
                {
                    <a asp-area="Identity" asp-page="/Account/Login" class="btn btn-primary btn-lg px-4">Iniciar sesión</a>
                    <a asp-area="Identity" asp-page="/Account/Register" class="btn btn-outline-primary btn-lg px-4">Registrarse</a>
                }
            </div>
        </div>
        <div class="col-lg-6 d-none d-lg-block text-center">
            <svg xmlns="http://www.w3.org/2000/svg" width="200" height="200" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.2" style="color: #1e3a8a;">
                <path d="M12 14l9-5-9-5-9 5 9 5z" />
                <path d="M12 14l6.16-3.422a12.083 12.083 0 01.665 6.479A11.952 11.952 0 0012 20.055a11.952 11.952 0 00-6.824-2.998 12.078 12.078 0 01.665-6.479L12 14z" />
                <path stroke-linecap="round" stroke-linejoin="round" d="M12 14l9-5-9-5-9 5 9 5zm0 0l6.16-3.422a12.083 12.083 0 01.665 6.479A11.952 11.952 0 0012 20.055a11.952 11.952 0 00-6.824-2.998 12.078 12.078 0 01.665-6.479L12 14zm-4 6v-7.5l4-2.222" />
            </svg>
        </div>
    </div>
</div>
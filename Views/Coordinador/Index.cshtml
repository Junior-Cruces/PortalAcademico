@model List<PortalAcademico.Models.Curso>
@{ ViewData["Title"] = "Panel Coordinador"; }

<h2>Panel Coordinador</h2>
<a asp-action="Create" class="btn btn-primary mb-3">Crear curso</a>

<table class="table">
    <thead><tr><th>Nombre</th><th>Código</th><th>Créditos</th><th>Acciones</th></tr></thead>
    <tbody>
    @foreach (var c in Model)
    {
        <tr>
            <td>@c.Nombre</td>
            <td>@c.Codigo</td>
            <td>@c.Creditos</td>
            <td><a asp-action="Edit" asp-route-id="@c.Id" class="btn btn-sm btn-outline-secondary">Editar</a></td>
        </tr>
    }
    </tbody>
</table>
@model PortalAcademico.Models.Curso

@{
    ViewData["Title"] = "Detalle del Curso";
}

<h2>@Model.Nombre</h2>

<div class="card" style="max-width: 600px;">
    <div class="card-body">
        <p><strong>Código:</strong> @Model.Codigo</p>
        <p><strong>Créditos:</strong> @Model.Creditos</p>
        <p><strong>Cupo máximo:</strong> @Model.CupoMaximo</p>
        <p><strong>Horario:</strong> @Model.HorarioInicio - @Model.HorarioFin</p>
        <p><strong>Activo:</strong> @(Model.Activo ? "Sí" : "No")</p>

        @if (User.Identity.IsAuthenticated && Model.Activo)
        {
            <a asp-controller="Matriculas" asp-action="Inscribir" asp-route-cursoId="@Model.Id" class="btn btn-success">
                Inscribirse
            </a>
        }
        else if (!Model.Activo)
        {
            <span class="text-muted">Curso no disponible para inscripción.</span>
        }
        else
        {
            <a asp-area="Identity" asp-page="/Account/Login" class="btn btn-warning">
                Inicia sesión para inscribirte
            </a>
        }

        <a asp-action="Index" class="btn btn-secondary mt-2">Volver al catálogo</a>
    </div>
</div>
@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Portal Académico</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-primary">
            <div class="container">
                <a class="navbar-brand text-white" asp-area="" asp-controller="Home" asp-action="Index">Portal Académico</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Cursos" asp-action="Index">Catálogo</a>
                        </li>
                        @if (User.Identity.IsAuthenticated)
                        {
                            if (User.IsInRole("Coordinador"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-white" asp-area="" asp-controller="Coordinador" asp-action="Index">Panel Coordinador</a>
                                </li>
                            }
                        }
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>

        <!-- Mensajes de éxito/error -->
        @if (TempData["Success"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show m-3" role="alert">
                @TempData["Success"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }
        @if (TempData["Error"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show m-3" role="alert">
                @TempData["Error"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }

        <!-- Enlace de "Volver al curso" (Pregunta 4 - opcional por ahora) -->
        @if (Context.Session.GetString("UltimoCursoNombre") != null)
        {
            <div class="bg-light text-center py-2">
                <a class="text-primary" 
                   asp-controller="Cursos" 
                   asp-action="Details" 
                   asp-route-id="@Context.Session.GetInt32("UltimoCursoId")">
                    👈 Volver al curso @Context.Session.GetString("UltimoCursoNombre")
                </a>
            </div>
        }
        @if (Context.Session.GetString("UltimoCursoNombre") != null)
{
    <div class="bg-light text-center py-2 border-bottom">
        <a class="text-primary text-decoration-none" 
           asp-controller="Cursos" 
           asp-action="Details" 
           asp-route-id="@Context.Session.GetInt32("UltimoCursoId")">
            👈 Volver al curso @Context.Session.GetString("UltimoCursoNombre")
        </a>
    </div>
}
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container text-center">
            &copy; 2025 - Portal Académico
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>